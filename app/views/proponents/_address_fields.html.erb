<div class="nested-fields border rounded p-3 mb-3">
  <div class="row g-3">
    <div class="col-md-6">
      <%= f.label :street, 'Logradouro', class: 'form-label' %>
      <%= f.text_field :street, class: 'form-control', placeholder: 'Digite o logradouro' %>
    </div>
    <div class="col-md-2">
      <%= f.label :number, 'Número', class: 'form-label' %>
      <%= f.text_field :number, class: 'form-control', placeholder: 'Digite o número' %>
    </div>
    <div class="col-md-4">
      <%= f.label :neighborhood, 'Bairro', class: 'form-label' %>
      <%= f.text_field :neighborhood, class: 'form-control', placeholder: 'Digite o bairro' %>
    </div>
  </div>
  
  <div class="row g-3 mt-2">
    <div class="col-md-6">
      <%= f.label :city, 'Cidade', class: 'form-label' %>
      <%= f.text_field :city, class: 'form-control', placeholder: 'Digite a cidade' %>
    </div>
    <div class="col-md-4">
      <%= f.label :state, 'Estado', class: 'form-label' %>
      <%= f.text_field :state, class: 'form-control', placeholder: 'Digite o estado' %>
    </div>
    <div class="col-md-2">
      <%= f.label :zip_code, 'CEP', class: 'form-label' %>
      <%= f.text_field :zip_code, class: 'form-control cep-mask', placeholder: 'Digite o CEP' %>
    </div>
  </div>

  <div class="d-flex justify-content-end mt-3">
    <%= f.hidden_field :_destroy %>
    <%= link_to_remove_association 'Remover', f, class: 'btn btn-danger btn-sm' %>
  </div>
</div>
